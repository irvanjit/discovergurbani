<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irvanjit.discovergurbani.PagerActivity$ReadPageFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/read_text_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView android:id="@+id/read_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_page_text"
                android:maxLines = "50"
                android:scrollbars = "vertical"
                android:textSize="15sp"/>

        </RelativeLayout>

    </ScrollView>
    <RelativeLayout android:id="@+id/spinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/read_text_scroll"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <Spinner android:id="@+id/transliteration_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/translation_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/transliteration_spinner"
            android:layout_toEndOf="@id/transliteration_spinner"/>
    </RelativeLayout>
    <Button android:id="@+id/read_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/read_text_scroll"
        android:layout_toEndOf="@+id/spinners"
        android:layout_toRightOf="@+id/spinners"
        android:layout_centerHorizontal="true"
        android:text="@string/read_button_text" />

</RelativeLayout>