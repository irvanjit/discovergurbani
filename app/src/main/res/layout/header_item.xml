<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shabad_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingLeft="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/laridaar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/gurbani_basanti"/>

    <TextView
        android:id="@+id/gurmukhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/gurbani_basanti"/>

    <TextView
        android:id="@+id/transliteration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:textColor="@color/transliteration_white"/>

    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:textColor="@color/translation_grey"/>

</LinearLayout>

</android.support.v7.widget.CardView>


