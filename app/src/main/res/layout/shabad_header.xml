<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_dark"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_floating_material_dark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/translation_grey"
                android:text="@string/headerAngLabel"/>
            <TextView android:id="@+id/metaAng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/metadata_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/translation_grey"
                android:text="@string/headerRaagLabel"/>
            <TextView android:id="@+id/metaSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/metadata_blue"/>
        </LinearLayout>
        <!--<TextView android:id="@+id/metaAuthor"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"/>-->
    </LinearLayout>
</LinearLayout>